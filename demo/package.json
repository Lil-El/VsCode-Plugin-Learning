{
  "name": "demo",
  "displayName": "yxd-vscode-plugin-demo",
  "description": "demo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "icon": "image/p-icon.png",
  "categories": [
    "Other"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "MINO-plugin-demo",
      "properties": {
        "Mino插件.yourName": {
          "type": "string",
          "default": "guest",
          "description": "你的名字"
        },
        "Mino插件.showTip": {
          "type": "boolean",
          "default": true,
          "description": "是否在每次启动时显示欢迎提示！"
        }
      }
    },
    "commands": [
      {
        "command": "demo.helloWorld",
        "title": "YXD:hello"
      },
      {
        "command": "demo.sayHello",
        "title": "YXD:say"
      }
    ],
    "keybindings": [
      {
        "command": "demo.sayHello",
        "key": "ctrl+f10",
        "mac": "cmd+f10",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "demo.sayHello",
          "group": "navigation@1"
        },
        {
          "when": "editorFocus",
          "command": "demo.helloWorld",
          "group": "h_commands"
        },
        {
          "when": "editorFocus && resourceLangId == javascript",
          "command": "demo.helloWorld",
          "group": "z_commands"
        }
      ],
      "editor/title": [
        {
          "when": "editorFocus && resourceLangId == javascript",
          "command": "demo.sayHello",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceLangId == javascript",
          "command": "demo.sayHello",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "demo.getCurrentFilePath",
          "group": "navigation"
        },
        {
          "command": "demo.openWebview",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "demo.helloWorld",
          "group": "navigation"
        },
        {
          "command": "demo.sayHello",
          "group": "navigation"
        }
      ]
    }
  },
  "activationEvents": [
    "onCommand:demo.helloWorld",
    "onCommand:demo.sayHello"
  ],
  "main": "./extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
